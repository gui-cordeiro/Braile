{
   "version": "2.0.0",
   "tasks": [
       {
           "label": "Compilar C",
           "type": "shell",
           "command": "gcc",
           "args": [
               "-g",
               "${file}",
               "-o",
               "${fileDirname}/${fileBasenameNoExtension}.exe"
           ],
           "group": {
               "kind": "build",
               "isDefault": true
           },
           "problemMatcher": ["$gcc"],
           "detail": "Compilando o programa"
       },
       {
           "label": "Executar C",
           "type": "shell",
           "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
           "group": {
               "kind": "test",
               "isDefault": true
           },
           "presentation": {
               "reveal": "always",
               "panel": "new",
               "echo": true,
               "showReuseMessage": true,
               "clear": false,
               "close": false
           },
           "options": {
               "shell": {
                   "executable": "cmd.exe",
                   "args": ["/c"]
               }
           },
           "detail": "Executando o programa"
       }
   ]
}
{
   "version": "2.0.0",
   "tasks": [
       {
           "label": "Compilar C",
           "type": "shell",
           "command": "gcc.exe",
           "args": [
                "-Wall",
                "-g",
                "-Ilibs\\include",
                "-c",
                "${workspaceFolder}\\main.c",
                "-o",
                "obj\\Debug\\main.o",
                "&&",
                "gcc.exe",
                "-Llibs\\lib",
                "-o",
                "bin\\Debug\\Braile.exe",
                "obj\\Debug\\main.o",
                "-lwinmm",
                "-lSDL2",
                "-lSDL2main",
                "-lSDL2_mixer",
                "-lmingw32",
                "-lSDL2",
                "-lSDL2main",
                "-lSDL2_mixer",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_mixer"
            ],
           "group": {
               "kind": "build",
               "isDefault": true
           },
           "problemMatcher": ["$gcc"],
           "detail": "Compilando o programa C/C++",
           "dependsOn": [],
           "runOptions": {
               "runOn": "folderOpen"
           },
           "presentation": {
               "reveal": "always",
               "panel": "new"
           }
       },
       {
        "label": "Compilar e Executar C",
        "type": "shell",
        "command": "gcc.exe",
        "args": [
             "-Wall",
             "-g",
             "-Ilibs\\include",
             "-c",
             "${workspaceFolder}\\main.c",
             "-o",
             "obj\\Debug\\main.o",
             "&&",
             "gcc.exe",
             "-Llibs\\lib",
             "-o",
             "bin\\Debug\\Braile.exe",
             "obj\\Debug\\main.o",
             "-lwinmm",
             "-lSDL2",
             "-lSDL2main",
             "-lSDL2_mixer",
             "-lmingw32",
             "-lSDL2",
             "-lSDL2main",
             "-lSDL2_mixer",
             "-lmingw32",
             "-lSDL2main",
             "-lSDL2",
             "-lSDL2_mixer",
             "&&",
             "start",
             "cmd",
             "/c",
             "bin\\Debug\\Braile.exe"
         ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compilando e executando o programa C/C++",
        "dependsOn": [],
        "runOptions": {
            "runOn": "folderOpen"
        },
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
    },
    
   ]
